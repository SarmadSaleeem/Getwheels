<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/simplebackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#474545"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/Passenger_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sarmad Saleem"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:fontFamily="@font/antic"
            android:textSize="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/Passenger_Profile"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/profile"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            app:shapeAppearanceOverlay="@style/cirular"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/Passenger_Current_Location"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/antic"
            android:text="Current Location"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/Passenger_Destination_Location"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="12dp"
            android:text="Destination Location"
            android:textColor="@color/white"
            android:fontFamily="@font/antic"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="100dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/Cancel_Request"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/reject_button"
            android:fontFamily="@font/antic"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#F44336"
            android:textSize="8dp"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/Accept_Request"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="75dp"
            android:background="@drawable/accept_button"
            android:fontFamily="@font/antic"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="#47BD4C"
            android:textSize="8dp"
            tools:ignore="TouchTargetSizeCheck" />



    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>