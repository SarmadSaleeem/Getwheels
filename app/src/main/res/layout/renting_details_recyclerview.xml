<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/simplebackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#BCB5B5"
        app:cardCornerRadius="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/Renting_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/Renting_CarName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CarName"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="35dp"/>

        <TextView
            android:id="@+id/Renting_RentDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Rent Date"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/Rening_ReturnDate"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Return Date"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="210dp"/>

        <TextView
            android:id="@+id/Renting_RentTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Rent Time"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/Renting_ReturnTime"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Return Time"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/antic"
            android:textSize="17dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="210dp"
            android:layout_marginBottom="10dp"/>






    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>