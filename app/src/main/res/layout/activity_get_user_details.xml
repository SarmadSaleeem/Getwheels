<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetUserDetails"
    android:background="@drawable/simplebackground">

    <Button
        android:id="@+id/submitinfo"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/signupbutton"
        android:fontFamily="@font/aclonica"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/uploadlicence"
        app:layout_constraintStart_toStartOf="@+id/uploadlicence"
        app:layout_constraintTop_toBottomOf="@+id/uploadlicence" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aclonica"
        android:text="Enter Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uploadid"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/id_card"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/Return_Time"
        app:layout_constraintStart_toStartOf="@+id/Rent_Time"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <ImageView
        android:id="@+id/uploadlicence"
        android:layout_width="250dp"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/driving_license"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/uploadid"
        app:layout_constraintStart_toStartOf="@+id/uploadid"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ProgressBar
        android:id="@+id/imageuploadingprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="92dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/RentingDate"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forwardstyle"
        android:ems="10"
        android:fontFamily="@font/antic"
        android:hint="Rent_Date"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#706E6E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/ReturningDate"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/forwardstyle"
        android:ems="10"
        android:fontFamily="@font/antic"
        android:hint="Return_Date"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#706E6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Rent_Time"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forwardstyle"
        android:ems="10"
        android:fontFamily="@font/antic"
        android:hint="Rent_Time"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#706E6E"
        app:layout_constraintStart_toStartOf="@+id/RentingDate"
        app:layout_constraintTop_toBottomOf="@+id/RentingDate"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/Return_Time"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forwardstyle"
        android:ems="10"
        android:fontFamily="@font/antic"
        android:hint="Return_Time"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="#706E6E"
        app:layout_constraintEnd_toEndOf="@+id/ReturningDate"
        app:layout_constraintTop_toBottomOf="@+id/ReturningDate"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/antic"
        android:text="Upload ID_Card"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/Return_Time"
        app:layout_constraintStart_toStartOf="@+id/Rent_Time"
        app:layout_constraintTop_toBottomOf="@+id/Rent_Time" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/antic"
        android:text="Upload Licence"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/uploadid"
        app:layout_constraintStart_toStartOf="@+id/uploadid"
        app:layout_constraintTop_toBottomOf="@+id/uploadid" />


</androidx.constraintlayout.widget.ConstraintLayout>