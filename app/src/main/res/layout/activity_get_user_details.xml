<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetUserDetails"
    android:background="@drawable/simplebackground">

    <EditText
        android:id="@+id/uploadname"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/field"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:textColorHint="#706E6E"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/identitycard"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/field"
        android:fontFamily="@font/aclonica"
        android:text="Upload ID-Card"
        android:textColor="#706E6E"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/uploadname"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uploadname"
        app:layout_constraintTop_toBottomOf="@+id/uploadname" />

    <Button
        android:id="@+id/lisence"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/field"
        android:fontFamily="@font/aclonica"
        android:text="Upload Licence"
        android:textColor="#706E6E"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/identitycard"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/identitycard"
        app:layout_constraintTop_toBottomOf="@+id/uploadid" />

    <Button
        android:id="@+id/submitinfo"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/signupbutton"
        android:fontFamily="@font/aclonica"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/lisence"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/lisence"
        app:layout_constraintTop_toBottomOf="@+id/uploadlicence" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/aclonica"
        android:text="Enter Details"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/uploadid"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/identitycard"
        app:layout_constraintStart_toStartOf="@+id/identitycard"
        app:layout_constraintTop_toBottomOf="@+id/identitycard"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/uploadlicence"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/lisence"
        app:layout_constraintStart_toStartOf="@+id/lisence"
        app:layout_constraintTop_toBottomOf="@+id/lisence"
        android:scaleType="fitXY"/>

    <ProgressBar
        android:id="@+id/imageuploadingprogress"
        style="?android:attr/progressBarStyle"
        android:layout_width="92dp"
        android:layout_height="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>